<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent" >

<RelativeLayout
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="517dp"
    android:background="#D3D3D3"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/auswahl_anzahl"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textIsSelectable="true" />

    <Spinner
        android:id="@+id/anzahl_spieler"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/auswahl_anzahl"
        android:layout_below="@+id/auswahl_anzahl" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/anzahl_spieler"
        android:layout_below="@+id/anzahl_spieler"
        android:layout_marginTop="22dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/spielername1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#FF0000"
                android:textIsSelectable="true" />

            <EditText
                android:id="@+id/Spieler1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10" />

             
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="41dp"
            android:layout_toRightOf="@+id/linearLayout1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/spielername3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#008000"
                android:textIsSelectable="true" />

            <EditText
                android:id="@+id/Spieler3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/spielername2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:textIsSelectable="true" />

            <EditText
                android:id="@+id/Spieler2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="41dp"
            android:layout_toRightOf="@+id/linearLayout2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/spielername4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFF00"
                android:textIsSelectable="true" />

            <EditText
                android:id="@+id/Spieler4"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/los"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/anzahl_spieler"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

</ScrollView>