<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ludoapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/bild"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.example.ludoapp.Startscreen"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.ludoapp.neuesspiel"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/neuesspiel" >
        </activity>
        <activity
            android:name="com.example.ludoapp.spiel"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/spiel"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.example.ludoapp.Login"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.example.ludoapp.Registration"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.example.ludoapp.Uebersicht"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.example.ludoapp.Highscore"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
        <activity
            android:name="com.example.ludoapp.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name="com.example.ludoapp.Settings"
            android:label="@string/labelPrefs" >
        </activity>

        <activity
            android:name="com.example.ludoapp.Gameroom"
            android:configChanges="keyboardHidden|orientation" >
        </activity>
    </application>

</manifest>